<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>
 
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
	    <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
		  value="[%d{HH:mm:ss} %c{1}:%-3L %-5p] %m%n" />
	    </layout>
	</appender>
	
    <logger name="client.Catan" additivity="false">
    	<level value="DEBUG"/>
        <appender-ref ref="console" />
    </logger>
	
    <logger name="client.CatanGame" additivity="false">
    	<level value="TRACE"/>
        <appender-ref ref="console" />
    </logger>
	
    <logger name="client.controller.map.MapController" additivity="false">
    	<level value="TRACE"/>
        <appender-ref ref="console" />
    </logger>
    
    <logger name="org.apache.http">
		<level value="WARN"/> 
	</logger>
 
	<root>
		<level value="DEBUG" />
		<appender-ref ref="console" />
	</root>
 
</log4j:configuration>